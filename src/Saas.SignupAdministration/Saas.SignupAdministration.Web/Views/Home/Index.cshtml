@{
	ViewData["Title"] = "SaaS Service | Your SaaS Service";
	Layout = "~/Views/Shared/_LayoutMarketing.cshtml";
}
<!-- ======= Jumbotron Section ======= -->
<div class="container">
 <div class="bg-white rounded-lg">
